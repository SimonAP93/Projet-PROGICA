{% extends "base.html.twig" %}

{% block body %}
<div class="container m-auto">
    {{ form_start(form) }}
    <div class="row ">
        <div class="col-6">
            {{ form_row(form.name) }}
            {{ form_row(form.description) }}
        </div>
    </div>
        <div class="row">
            <div class="col-6">
                {{ form_row(form.address) }}
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                {{ form_row(form.city) }}
            </div>
            <div class="col-3">
                {{ form_row(form.postalCode) }}
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                {{ form_row(form.surface) }}
            </div>
            <div class="col-2">
                {{ form_row(form.rooms) }}
            </div>
            <div class="col-2 mt-auto">
                {{ form_row(form.animals) }}
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                {{ form_row(form.equipements) }}
            </div>
           
        </div>
        <input type="submit" value="Save" class="btn btn-primary">
        {{ form_end(form) }}
</div>
{% endblock %}